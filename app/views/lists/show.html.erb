<h2 class="media-heading">
   <%= @list.title %>
</h2>
<div class="media-body">
   <%= @list.description %>
</div>
</br>

<div class="well well-lg">
   <h2 class="media-heading">
      Todos:
   </h2>
   <ul class="list-group">
      <h4 class="media-heading">
         <% @todos.each do |todo| %>
         <a href="#" class="list-group-item"><%= todo.description %></a>
         <% end %>
      </h4>
   </ul>
  <button class="btn btn-danger btn-md delete-todo-button" type="button">Delete Todos</button>
</div>
</br>

<button class="btn btn-primary btn-md new-list-button" type="button">Create New Todo</button>
<div class='create-new-list-form'>
   <%= form_for @todo do |f| %>
   <div class="form-group">
      <%= f.text_field :description, class: 'form-control', placeholder: "Enter Description" %>
   </div>
   <%= f.hidden_field :list_id, value: params[:id] %>
   <div class="form-group">
      <%= f.submit "Create Todo", class: 'btn btn-success' %>
   </div>
   <% end %>
</div>