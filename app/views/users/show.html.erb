<div class="row">
   <div class="col-md-8">
      <div class="media">
         <div class="media-body">
            <h2 class="media-heading">
               <%= gravatar_for @user %>
               <%= @user.username %>
            </h2>
            <%= @user.email %>
            <p><%= link_to "Edit Profile", edit_user_registration_path %></p>
         </div>
      </div>
   </div>
</div>
<hr>
<h2 class="media-heading">To Do Lists</h2>
<div class="create-new-list">
  <%= link_to "Create New List", "", class: "btn btn-primary btn-md new-list-button", role: "button"  %>
</div>

<div class='create-new-list-form'>
  <%= form_for @list do |f| %>
    <div class="form-group">
       <%= f.text_field :title, class: 'form-control', placeholder: "Enter Title" %>
    </div>
    <div class="form-group">
       <%= f.text_field :description, class: 'form-control', placeholder: "Enter Description" %>
    </div>
    <div class="form-group">
       <%= f.submit "Create List", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

<% @lists.each do |list| %>
<div class="media">
   <div class="media-body">
      <h4 class="media-heading">
         <%= link_to list.title, list %>
      </h4>
      <small>
      <%= list.description %>
      </small>
   </div>
</div>
<% end %>

