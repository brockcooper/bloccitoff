<button class="btn btn-primary btn-md new-list-button" type="button">
  Create New Todo
</button>

<div class='create-new-list-form'>
  <%= form_for @todo do |f| %>
  <div class="form-group">
    <%= f.text_field :description, class: 'form-control', placeholder: "Enter Description" %>
  </div>
  <%= f.hidden_field :list_id, value: @list.id %>
  <div class="form-group">
    <%= f.submit "Create Todo", class: 'btn btn-success' %>
  </div>
  <% end %>
</div>